body
  margin: 0
  padding: 0
  font-size: 14px
  line-height: 24px
  font-family: "Roboto", "Arial", sans-serif
  font-style: normal
  font-weight: 300
  color: #1f252d

a
  text-decoration: none;

img
  display: block;
  max-width: 100%;
  height: auto;

.visually-hidden
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  border: 0;
  padding: 0;
  white-space: nowrap;
  clip-path: inset(100%);
  clip: rect(0 0 0 0);
  overflow: hidden;