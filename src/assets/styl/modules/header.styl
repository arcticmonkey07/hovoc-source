.header
  height: 145px
  margin: 0
  margin-bottom: 71px
  padding: 0
  background: #f7f7f7

.header-container
  position: relative
  display: flex
  flex-wrap: wrap
  &:after
    content: ''
    position: absolute
    bottom: 0
    left: 0
    width: 1180px
    height: 19px
    background: #74cfb7

.header__logo
  position: relative
  display: block
  width: 187px
  height: 216px
  background: #74cfb7
  &:before
    content: ''
    position: absolute
    top: 13px
    left: 7px
    width: 173px
    height: 114px
    background: #ffffff

.header__name-container
  margin-top: 47px
  margin-left: 42px

.header__header
  margin: 0
  margin-bottom: 6px
  font-size: 21px
  font-weight: 400
  line-height: 27px

.header__adress
  position: relative
  display: block
  padding-left: 29px
  font-weight: 300
  line-height: 19px
  &:before
    content: ''
    position: absolute
    top: -9px
    left: -1px
    width: 24px
    height: 24px
    background-image: url('/assets/img/metro.svg')

.header__contacts-container
  margin-top: 47px
  margin-left: 45px

.header__tel
  display: block
  margin-bottom: 6px
  font-size: 20px
  font-weight: 400
  line-height: 27px
  letter-spacing: 0.2px
  color: #1f252d

.header__hours
  display: block
  font-weight: 300
  line-height: 19px
  letter-spacing: 0.3px

.header__consultation-button
  width: 225px
  height: 48px
  margin-top: 47px
  margin-left: auto
  font-weight: 400
  line-height: 19px
  text-align: center
  color: #ffffff
  border: none
  border-radius: 4px
  background: #079fc2
  box-shadow: 0 4px  10px rgba(116,207,183,0,45)
  cursor: pointer
  &:hover
    background: #74cfb7

.header__menu
  position: absolute
  bottom: 6px
  left: 0
  z-index: 10