.search
  position: relative
  width: 100%
  padding-bottom: 71px
  background-image: url('/assets/img/main-top-bg.png')
  background-size: cover

.search__header
  margin: 0
  padding-top: 71px
  font-size: 39px
  font-weight: 400
  line-height: 53px
  color: #ffffff
  text-align: center

.search__container
  padding-top: 26px
  padding-left: 27px
  margin: 31px auto 0 auto
  width: 1180px
  height: 191px
  background-color: #fff
  border-radius: 4px
  box-shadow: 0 11px  49px - 35px rgba(0,0,0,0,24)
  box-sizing: border-box

.search__price-text
  font-size: 14px
  font-weight: 300
  line-height: 19px

.search__range-container
  display: flex
  margin-bottom: 15px

.search__range-filter
  position: relative
  width: 849px
  height: 34px
  margin-top: 9px
  margin-right: 24px
  &:before
    content: ''
    position: absolute
    top: 13px
    left: 0
    width: 100%
    height: 8px
    background-color: #a8a8a8
    border-radius: 12px

.search__range-fill-line
  position: absolute
  top: 13px
  left: 0
  width: 849px
  height: 8px
  background-color: #74cfb7

.search__range-button
  position: absolute
  top: 0
  width: 82px
  padding: 8px 0
  font-size: 13px
  font-weight: 400
  line-height: 17px
  text-align: center
  border: 1px solid #ededed
  background-color: #f7f7f7
  border-radius: 16px
  box-shadow: 0 1px  24px rgba(0,0,0,0,05)
  cursor: pointer
  &:before
    content: ''
    position: absolute
    top: 13px
    left: 10px
    width: 4px
    height: 7px
    background-image: url('/assets/img/arrow.svg');
  &:after
    content: ''
    position: absolute
    top: 13px
    right: 10px
    width: 4px
    height: 7px
    background-image: url('/assets/img/arrow.svg');
  &:hover
    background-color: #e6e6e6
  &:active
    background-color: $green-color

.search__range-button--left
  left: 0

.search__range-button--right
  left: 765px
  right: 0

.search__radio-container
  position: relative
  top: -5px
  width: 200px

.search__radio
  display: none

.search__radio-indicator
  position: relative
  display: inline-block
  width: 12px
  height: 12px
  margin-right: 23px
  border: 1px solid #e2e2e2
  background: #f7f7f7
  border-radius: 4px

.search__radio:checked + .search__radio-indicator:before
  content: ''
  position: absolute
  top: 3px
  left: 3px
  width: 6px
  height: 6px
  background-color: #404853
  border-radius: 2px

.search__label
  display: inline-block
  font-size: 14px
  font-weight: 400
  line-height: 19px

.search__selects-wrapper
  display: flex

.search__select-container
  width: 200px
  position: relative
  &:after
    content: ''
    position: absolute
    top: 23px
    right: 22px
    width: 7px
    height: 4px
    pointer-events: none
    background-image: url('/assets/img/select-arrow.svg')
    background-repeat: no-repeat

.search__select
  position: relative
  width: 100%
  height: 48px
  padding-left: 20px
  font-size: 12px
  font-weight: 400
  line-height: 17px
  border: none
  border-right: 1px solid #e7e7e7
  background-color: #f7f7f7
  cursor: pointer
  -webkit-appearance: none
  box-sizing: border-box

.search__select-metro-container
  width: 174px

.search__select-metro
  width: 174px
  border-radius: 4px 0 0 4px

.search__button-select
  width: 152px
  height: 48px
  font-size: 13px
  font-weight: 400
  line-height: 17px
  text-transform: uppercase
  color: #fff
  background-color: $blue-color
  border: none
  border-radius: 4px
  box-shadow: 0 4px  10px rgba(116,207,183,0,45)
  cursor: pointer
  &:hover
    background-color: $green-color

.search__call
  position: absolute
  top: 70px
  right: 0
  display: block
  width: 71px
  height: 64px
  border-radius: 4px
  background-color: $green-color
  &:before
    content: ''
    position: absolute
    top: 10px
    left: 28px
    width: 12px
    height: 14px
    background-image: url('/assets/img/phone.svg')
  &:hover
    background-color: $blue-color

.search__call-text
  display: block
  margin-top: 32px
  font-size: 11px
  font-weight: 400
  line-height: 12px
  text-align: center
  color: #ffffff

.search__sign-up
  position: absolute
  top: 139px
  right: 0
  display: block
  width: 71px
  height: 64px
  border-radius: 4px
  background-color: $green-color
  &:before
    content: ''
    position: absolute
    top: 10px
    left: 28px
    width: 16px
    height: 15px
    background-image: url('/assets/img/calendar.svg')
  &:hover
    background-color: $blue-color

.search__sign-up-text
  display: block
  margin-top: 32px
  font-size: 11px
  font-weight: 400
  line-height: 12px
  text-align: center
  color: #ffffff