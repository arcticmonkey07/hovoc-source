.menu
  width: 100%

.menu__list
  display: flex
  margin: 0
  padding: 0
  list-style: none
  background-color: #fff;

.menu__item
  position: relative
  padding: 24px 0 24px 0
  &:after
    content: ''
    position: absolute
    top: 26px
    right: 0
    width: 1px
    height: 12px
    background-color: #e1e1e1

.menu__contact-item
  &:after
    width: 0
    height: 0

.menu__search-item
  margin-left: auto
  &:after
    width: 0
    height: 0

.menu__link
  position: relative
  display: block
  padding: 0 21px 0 20px
  font-size: 13px
  font-weight: 400
  line-height: 17px
  text-transform: uppercase
  color: #404853
  text-align: center
  &:hover
    color: #74cfb7
    &:after
      content: ''
      position: absolute
      bottom: -33px
      left: 0
      width: 100%
      height: 7px
      background-color: #74cfb7

.menu__new-buildings-link
  padding-left: 0

.menu__search-link
  padding-right: 0
  width: 14px
  height: 14px
  background-image: url('/assets/img/search.svg')
  background-repeat: no-repeat
  background-position: right center
  &:after
    width: 0
    height: 0
  &:hover
    &:after
      width: 0
      height: 0