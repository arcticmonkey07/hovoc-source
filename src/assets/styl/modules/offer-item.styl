.offer-item
  display: flex
  margin-bottom: 40px

.offer-item__info-container
  width: 580px
  height: 520px
  padding: 30px 20px 20px 53px
  background: #ffffff
  box-sizing: border-box

.offer-item__header
  margin: 5px 0 17px 0
  font-size: 24px
  font-weight: 400
  line-height: 32px

.offer-item__metro
  position: relative
  padding-left: 31px
  font-size: 14px
  font-weight: 400
  line-height: 19px
  &:before
    content: ''
    position: absolute
    top: -12px
    left: -1px
    width: 24px
    height: 24px
    background-image: url('/assets/img/metro-green.svg')
  &--gray
    &:before
      background-image: url('/assets/img/metro-gray.svg')
  &--blue
    &:before
      background-image: url('/assets/img/metro-blue.svg')

.offer-item__time
  margin-left: 18px
  font-size: 13px
  font-weight: 300
  line-height: 17px
  opacity: .6

.offer-item__address
  margin-top: 17px
  margin-bottom: 9px
  font-size: 14px
  font-weight: 400
  line-height: 19px

.offer-table
  margin-bottom: 8px
  &--margin
    margin-bottom: 68px

.offer-table td
  border-collapse: collapse
  border-bottom: 1px solid #e7e7e7

.offer-table__headers
  width: 226px
  padding: 12px 0 5px 0
  font-size: 14px
  font-weight: 400
  line-height: 19px
  opacity: .6
  border-right: 1px solid #e7e7e7

.offer-table__text
  padding: 12px 0 5px 26px
  font-size: 14px
  font-weight: 400
  line-height: 19px

.offer-item__buttons-list
  display: flex
  margin: 0
  padding: 0
  list-style: none

.offer-item__button
  position: relative
  margin-right: 7px
  padding-top: 9px
  padding-left: 33px
  padding-right: 10px
  padding-bottom: 9px
  font-size: 14px
  font-weight: 400
  line-height: 19px
  color: $blue-color
  border: none
  border-radius: 4px
  background-color: #f7f7f7
  text-transform: uppercase
  cursor: pointer
  &:hover
    background-color: #d7d7d7
  &--house
    &:before
      content: ''
      position: absolute
      top: 11px
      left: 10px
      width: 14px
      height: 15px
      background-image: url('/assets/img/house.svg')
  &--calendar
    &:before
      content: ''
      position: absolute
      top: 11px
      left: 10px
      width: 16px
      height: 15px
      background-image: url('/assets/img/calendar-offer.svg')
  &--percentage
    &:before
      content: ''
      position: absolute
      top: 10px
      left: 11px
      width: 14px
      height: 14px
      background-image: url('/assets/img/percentage.svg')
  &--ruble
    &:before
      content: ''
      position: absolute
      top: 9px
      left: 9px
      width: 18px
      height: 18px
      background-image: url('/assets/img/ruble.svg')

.offer-item__photo-container
  position: relative
  display: flex
  justify-content: center
  align-items: flex-end
  width: 600px
  height: 520px
  background-image: url('/assets/img/offer-nekrasovka.png')

.photo-container
  &--flagman
    background-image: url('/assets/img/offer-flagman.png')
  &--laikovo
    background-image: url('/assets/img/offer-laikovo.png')

.photo-container__top-block
  position: absolute
  top: 0
  right: 0
  width: 229px
  padding: 14px 10px 13px 18px
  border-radius: 0 0 0 4px
  background: #f0f0f0
  opacity: .75
  box-sizing: border-box
  &--padding
    padding-bottom: 6px

.photo-container__text
  position: relative
  display: block
  padding-left: 33px
  font-size: 13px
  font-weight: 400
  line-height: 17px
  color: #404853
  &--certificate
    margin-bottom: 10px
    &:before
      content: ''
      position: absolute
      top: 1px
      left: 1px
      width: 14px
      height: 14px
      background-image: url('/assets/img/certificate.svg')
  &--sale
    &:before
      content: ''
      position: absolute
      top: 0
      left: 1px
      width: 18px
      height: 14px
      background-image: url('/assets/img/megaphone.svg')

.photo-container__button
  width: 222px
  height: 48px
  margin-bottom: 36px
  font-size: 13px
  font-weight: 400
  line-height: 17px
  color: #ffffff
  border: none
  border-radius: 4px
  background-color: $blue-color
  box-shadow: 0 4px 10px rgba(116,207,183,0,45)
  text-transform: uppercase
  cursor: pointer
  &:hover
    background-color: $green-color